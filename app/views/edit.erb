<div class="row well">
  <div class="padding-left"><a class="btn-sm btn-info" href="/">Back to Task Manager</a></div>
  <h2 class="text-center">edit an existing task:</h2>
</div>
<div class="text-center">
  <form action="/tasks/<%= @task.id %>" method="post">
    <input type="hidden" name="_method" value="PUT" />
    title<br/>
    <input type="text" name="task[title]" value="<%= @task.title %>" /><br/><br/>
    image<br/>
    <input type="text" name="task[image]" value="<%= @task.image %>" /><br/><br/>
    description<br/>
    <textarea name="task[description]" ><%= @task.description %></textarea><br />
    <input class="btn btn-default" type="submit" />
  </form>
</div>
